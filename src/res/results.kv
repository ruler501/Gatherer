<ResultPage>:
    viewclass: 'CardResult'
    RecycleBoxLayout:
        spacing: dp(10)
        default_size: None, dp(100)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CardResult>:
    id: result
    canvas.before:
        Color:
            rgba: result.back_col
        Rectangle:
            pos: result.pos
            size: result.size
    orientation: 'horizontal'
    image: image
    AsyncImage:
        id: image
        size_hint: None, None
        height: 100
        source: result.image_url
    Label:
        text: result.count
        color: 0, 0, 0, 1
        font_size: 64
        size_hint: 0.035, None
        height: 100
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, None
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: result.name
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: result.full_type_line
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, 1
        ManaCost:
            size_hint: 1, None
            height: 50
            mana_cost: result.mana_cost
        Label:
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: result.set_name
            text_size: self.size
