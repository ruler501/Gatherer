<ResultPage>:
    viewclass: 'CardResult'
    scroll_wheel_distance: dp(40)
    RecycleBoxLayout:
        spacing: dp(5)
        default_size: None, dp(75)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CardResult>:
    height: dp(75)
    size_hint: 1, None
    id: result
    canvas.before:
        Rectangle:
            pos: result.pos
            size: result.size
            texture: result.back_texture
    orientation: 'horizontal'
    image: image
    CachedImage:
        id: image
        size_hint: None, None
        size: dp(102), dp(75)
        source: result.image_url
        original_height: 300
        crop_to: 15, 35, 183, 135
        allow_stretch: True
    MultiLineLabel:
        id: count
        text: result.count
        color: 0, 0, 0, 1
        font_size: sp(36)
        size_hint_y: 1
        size_hint_x: None
        height: dp(75)
        halign: 'center'
        valign: 'center'
    Label:
        size_hint: None, None
        size: dp(10), dp(75)
    BoxLayout:
        orientation: 'vertical'
        width: (root.width - count.width - dp(112)) * 2 / 3
        size_hint: None, None
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: dp(37)
            font_size: sp(16)
            text: result.name
        Label:
            size_hint: None, None
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: dp(38)
            font_size: sp(16)
            text: result.full_type_line
            valign: 'top'
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        width: (root.width - count.width - dp(112)) / 3
        ManaCost:
            size_hint: 1, None
            height: dp(37)
            mana_cost: result.mana_cost
        Label:
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: dp(38)
            font_size: sp(16)
            text: result.set_name
            text_size: self.size
            valign: 'top'
