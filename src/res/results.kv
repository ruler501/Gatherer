<ResultPage>:
    viewclass: 'CardResult'
    RecycleBoxLayout:
        spacing: dp(10)
        default_size: None, dp(112)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CardResult>:
    canvas.before:
        Color:
            rgba: self.back_col
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    mana_render: mana_render
    image: image
    AsyncImage:
        id: image
        size_hint: 0.15, 1
        source: self.parent.image_url
        on_touch_down: self.parent.show_card(args[0])
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, 1
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, 0.5
            text: self.parent.parent.name
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, 0.5
            text: self.parent.parent.full_type_line
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, 1
        ManaCost:
            id: mana_render
            size_hint: 1, 0.5
        Label:
            color: 0, 0, 0, 1
            size_hint: 1, 0.5
            pos_hint: {'x': 0, 'top': 0}
            text: self.parent.parent.set_name
            text_size: self.size
