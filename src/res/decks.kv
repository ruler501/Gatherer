<DeckScreen>:
    id: screen
    inner_layout: inner_layout
    sort_sel: sort_sel
    BoxLayout:
        orientation: 'vertical'
        SortSelector:
            pos_hint: {'right': 1}
            size_hint: 0.25, 0.1
            id: sort_sel
            screen: screen
        ScrollView:
            scroll_wheel_distance: 40
            size_hint: 1, 1
            BoxLayout:
                id: inner_layout
                orientation: 'vertical'
                size_hint: 1, None
                Label:
                    text: screen.deck_name
                    pos_hint: {'center_x': 0.5}
                    size_hint: None, None
                    height: 20
                Label:
                    text: screen.counts
                    pos_hint: {'center_x': 0.5}
                    size_hint: None, None
                    height: 20

<Board>:
    orientation: 'vertical'
    id: board
    size_hint: 1, None
    Label:
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size
        height: 60
        font_size: 40
        size_hint: 1, None
        text: board.title
