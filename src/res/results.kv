<ResultPage>:
    viewclass: 'CardResult'
    scroll_wheel_distance: 40
    RecycleBoxLayout:
        spacing: dp(10)
        default_size: None, dp(100)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CardResult>:
    id: result
    canvas.before:
        Rectangle:
            pos: result.pos
            size: result.size
            texture: result.back_texture
    orientation: 'horizontal'
    image: image
    CachedImage:
        id: image
        size_hint: None, None
        height: 100
        allow_stretch: True
        keep_ratio: True
        source: result.image_url
        original_size: 233, 311
        crop_to: 15, 35, 190, 140
    Label:
        text: result.count
        color: 0, 0, 0, 1
        font_size: 64
        size_hint: 0.035, None
        height: 100
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, None
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: result.name
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: result.full_type_line
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, 1
        ManaCost:
            size_hint: 1, None
            height: 50
            mana_cost: result.mana_cost
        Label:
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: result.set_name
            text_size: self.size

<CachedCardArt>:
    id: cache
    sub_image: image
    CardArt:
        id: image
        source: cache.image_location
        height: cache.height
        allow_stretch: cache.allow_stretch
        keep_ratio: cache.keep_ratio
