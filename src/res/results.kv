<ResultPage>:
    viewclass: 'CardResult'
    scroll_wheel_distance: dp(40)
    RecycleBoxLayout:
        spacing: dp(10)
        default_size: None, dp(100)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CardResult>:
    height: self.minimum_height
    id: result
    canvas.before:
        Rectangle:
            pos: result.pos
            size: result.size
            texture: result.back_texture
    orientation: 'horizontal'
    image: image
    CachedImage:
        id: image
        size_hint: None, None
        size: dp(135), dp(100)
        source: result.image_url
        original_height: 311
        crop_to: 15, 35, 190, 140
    Label:
        text: result.count
        color: 0, 0, 0, 1
        font_size: sp(64)
        size_hint: 0.05, None
        height: dp(100)
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, None
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: dp(50)
            font_size: sp(16)
            text: result.name
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: dp(50)
            font_size: sp(16)
            text: result.full_type_line
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, 1
        ManaCost:
            size_hint: 1, None
            height: dp(50)
            mana_cost: result.mana_cost
        Label:
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: dp(50)
            font_size: sp(16)
            text: result.set_name
            text_size: self.size
