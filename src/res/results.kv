<ResultPage>:
    viewclass: 'CardResult'
    RecycleBoxLayout:
        spacing: dp(10)
        default_size: None, dp(100)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CardResult>:
    canvas.before:
        Color:
            rgba: self.back_col
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    mana_render: mana_render
    image: image
    AsyncImage:
        id: image
        size_hint: 0.15, None
        height: 100
        source: self.parent.image_url
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, None
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: self.parent.parent.name
        Label:
            text_size: self.size
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: self.parent.parent.full_type_line
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.25, 1
        ManaCost:
            id: mana_render
            size_hint: 1, None
            height: 50
        Label:
            color: 0, 0, 0, 1
            size_hint: 1, None
            height: 50
            text: self.parent.parent.set_name
            text_size: self.size
